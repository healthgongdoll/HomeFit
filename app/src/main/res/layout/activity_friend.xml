<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Friend"
    android:orientation="vertical"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bottomColor"
        >
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtFriend"
            android:hint="Search"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/component"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Search Result"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/receipekorea"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_weight="0"
        android:layout_gravity="center"
        app:cardCornerRadius="100dp"
        android:layout_marginTop="30dp"

        >

        <ImageView
            android:id="@+id/imgFriend"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_launcher_foreground"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/txtFriend"
        />
    <TextView
        android:layout_width="72.9dp"
        android:layout_height="35dp"
        android:text="Lv."
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="11.4sp"
        android:layout_gravity="center"
        android:id="@+id/friendlvl"
        android:textColor="#4d4d4d"
        android:background="@drawable/buttonlvl"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mainbuttonbackground"
        android:text="Search Friend"
        android:layout_marginTop="50dp"
        android:textColor="@color/textColorb"
        android:layout_gravity="center"
        android:id="@+id/btnSearch"
        />
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       >
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/friend_container"
           >
       </FrameLayout>
       <com.ismaeldivita.chipnavigation.ChipNavigationBar
           android:layout_width="match_parent"
           android:layout_height="72dp"
           android:background="@drawable/rounded"
           android:layout_alignParentBottom="true"
           android:elevation="16dp"
           android:padding="8dp"
           android:id="@+id/underbar"
           app:cnb_menuResource="@menu/menu_bottom"
           />
   </RelativeLayout>








</LinearLayout>