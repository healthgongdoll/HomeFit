<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile"
    android:background="#26282b"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center"
        android:orientation="vertical"
        android:background="#333538"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Edit"
            android:textSize="15sp"
            android:layout_marginTop="22.2dp"
            android:layout_marginLeft="25.5dp"
            android:textColor="@color/colorWhite"
            >

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="0"
            android:layout_gravity="center"
            app:cardCornerRadius="100dp"
            android:layout_marginTop="47dp"

            >

            <ImageView
                android:id="@+id/img_profileUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_launcher_foreground"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름표시될곳"
            android:textAlignment="center"
                android:layout_marginTop="5.4dp"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/txtNamep"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디표시"
            android:textAlignment="center"
            android:layout_marginTop="5.4dp"
            android:textSize="13sp"
            android:textColor="@color/id"
            android:id="@+id/txtIdenti"
            />
        <TextView
            android:layout_width="72.9dp"
            android:layout_height="35dp"
            android:text="Lv."
            android:textAlignment="center"
            android:layout_marginTop="27.2dp"
            android:textSize="11.4sp"
            android:id="@+id/txtLvlp"
            android:textColor="#4d4d4d"
            android:background="@drawable/buttonlvl"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:id="@+id/btnUpdate"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@drawable/mainbuttonbackground"
        />


</LinearLayout>